create table phone_numbers(
    phone_id int generated by default as identity primary key,
    phone_number varchar(12) unique not null
);

create table messages(
    message_id int generated by default as identity primary key,
    message_text text
);

create table message_phone_relations(
    relations_id int generated by default as identity primary key,
    message_id int,
    phone_id int,
    status bool,
    FOREIGN KEY (message_id) REFERENCES messages(message_id),
    FOREIGN KEY (phone_id) REFERENCES phone_numbers(phone_id)
)